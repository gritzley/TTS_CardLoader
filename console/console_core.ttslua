COMMAND_PATTERN = "^%$(%w+)%s?(.*)"
COMMAND = { }

function tryExecuteCommand(message, command)
    _, _, command, params = message:find(COMMAND_PATTERN)
    if command ~= nil then
        if COMMANDS[command] ~= nil then
            COMMANDS[command](params, player)
        else
            print(command.." is not a command")
        end
        return true
    end
end

